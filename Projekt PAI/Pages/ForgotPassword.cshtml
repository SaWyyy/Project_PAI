@page
@model Projekt_PAI.Pages.ForgotPasswordModel
@{
}

@if (Model.message.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.message</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if(Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Wprowadź email do zmiany hasła</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Adres email</label>
                    <input type="text" class="form-control" asp-for="Email" value="@Model.Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Wyślij</button>
                </div>
            </form>
            <script>
                if (@Model.ClearInput.ToString().ToLower()) {
                    document.querySelector('input[type="text"]').value = "";
                }
            </script>
        </div>
    </div>
</div>